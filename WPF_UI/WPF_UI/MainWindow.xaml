<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_UI"
        xmlns:Controls="clr-namespace:akr.WPF.Controls;assembly=akr.WPF.Controls.ColorPicker" x:Class="WPF_UI.MainWindow"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.FontWeight="Normal"
        TextElement.FontSize="14"
		mc:Ignorable="d"
	
	    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextOptions.TextFormattingMode="Ideal" 
        TextOptions.TextRenderingMode="Auto"        
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"

        Title="Oredayo UI v0.1 beta" Height="800" Width="500" Closed="Window_Closed" Loaded="Window_Loaded" Closing="Window_Closing">
	<!--		-->
	<DockPanel LastChildFill="True">
		<StatusBar DockPanel.Dock="Bottom" VerticalAlignment="Bottom" Background="#222222">
			<StatusBarItem>
				<TextBlock Name="StatusBarText" VerticalAlignment="Center" Foreground="#F0F0F0">Welcome to Oredayo!</TextBlock>
			</StatusBarItem>
		</StatusBar>
		<TabControl DockPanel.Dock="Top">
			<TabItem  Header="ようこそ">
				<StackPanel>
					<GroupBox Header="1. Oredayoを起動しましょう">
						<DockPanel>
							<Button DockPanel.Dock="Top" Margin="1,1,1,1" Content="Oredayoを起動する" Click="LaunchOredayo_Click" />
							<TextBlock Name="WelcomeOredayoIsRunningTextBlock"  TextAlignment="Center" DockPanel.Dock="Bottom" VerticalAlignment="Center" Background="LightGreen" Text="Oredayoは正常に起動しています"/>
							<TextBlock Name="WelcomeOredayoIsNotRunningTextBlock" TextAlignment="Center" DockPanel.Dock="Bottom" VerticalAlignment="Center" Background="LightPink" Text="Oredayoを起動してください(再起動してください)"/>
						</DockPanel>
					</GroupBox>
					<GroupBox Header="2. Waidayoを準備しましょう">
						<TabControl DockPanel.Dock="Top" Name="WelcomeWaidayoTabControl" Background="LightYellow">
							<TabItem  Header="2-1. ダウンロード">
								<Grid>
									<DockPanel>
										<TextBlock DockPanel.Dock="Top" VerticalAlignment="Center" Text="waidayoをインストールしましょう！"/>
										<TextBlock DockPanel.Dock="Top" VerticalAlignment="Center" Text="Face ID搭載のiPhoneあるいはiPadが必要です"/>
										<Grid DockPanel.Dock="Top" HorizontalAlignment="Center" MaxWidth="400">
											<Grid.ColumnDefinitions>
												<ColumnDefinition/>
												<ColumnDefinition Width="0.4*"/>
											</Grid.ColumnDefinitions>
											<Image Grid.Column="0" Source="Resources/waidayo_logo.png" />
											<Image Grid.Column="1" Source="Resources/waidayo_qr.png" />
										</Grid>
										<Button DockPanel.Dock="Bottom" Margin="3,3,3,3" Content="次へ" Click="WelcomeWaidayoNextButton_Clicked" />
									</DockPanel>
								</Grid>
							</TabItem>
							<TabItem  Header="2-2. 起動">
								<Grid>
									<DockPanel>
										<TextBlock  DockPanel.Dock="Top" VerticalAlignment="Center" Text="ホーム画面からwaidayoを起動しましょう"/>
										<Image DockPanel.Dock="Top" Source="Resources/waidayo_icon.png" MaxWidth="150" />
										<Button DockPanel.Dock="Bottom" Margin="3,3,3,3"  Content="次へ" Click="WelcomeWaidayoNextButton_Clicked" />
									</DockPanel>
								</Grid>
							</TabItem>
							<TabItem  Header="2-3. VRMを転送">
								<Grid>
									<DockPanel>
										<TextBlock DockPanel.Dock="Top"  VerticalAlignment="Center" Text="VRMファイルをwaidayoに導入します。"/>
										<TextBlock DockPanel.Dock="Top"  VerticalAlignment="Center" Text="1. 使いたいVRMファイルを「default.vrm」というファイル名にして準備してください。"/>
										<TextBlock DockPanel.Dock="Top"  VerticalAlignment="Center" Text="2. iPhone(iPad)をPCに接続し、iTunesを開いてください。"/>
										<TextBlock DockPanel.Dock="Top"  VerticalAlignment="Center" Text="3. iTunes上でiPhone(iPad)を選択してください。"/>
										<TextBlock DockPanel.Dock="Top"  VerticalAlignment="Center" Text="4. ファイル共有->waidayo を選択してください。"/>
										<TextBlock DockPanel.Dock="Top"  VerticalAlignment="Center" Text="5. 「waidayoの書類」と書かれたファイル一覧に、「default.vrm」を"/>
										<TextBlock DockPanel.Dock="Top"  VerticalAlignment="Center" Text="    ドラッグ&amp;ドロップしてください。"/>
										<TextBlock DockPanel.Dock="Top"  VerticalAlignment="Center" Text="6. waidayoを一度終了し、再度起動してください。"/>
										<TextBlock DockPanel.Dock="Top"  VerticalAlignment="Center" Text="　 アバターが変わっていれば転送完了です。"/>
										<Button DockPanel.Dock="Bottom" Margin="3,3,3,3" Content="次へ" Click="WelcomeWaidayoNextButton_Clicked" />
									</DockPanel>
								</Grid>
							</TabItem>
							<TabItem  Header="2-4. 設定">
								<Grid>
									<DockPanel>
										<Image DockPanel.Dock="Top" Source="Resources/ipset.png" MaxWidth="300" />
										<TextBlock DockPanel.Dock="Top"  VerticalAlignment="Center" Text="waidayoのメニューを開き"/>
										<TextBlock DockPanel.Dock="Top"  VerticalAlignment="Center" Text="Send Motion IP Addressを以下のいずれかに設定してください"/>
										<TextBlock DockPanel.Dock="Top"  Name="WelcomeIPAddressTextBlock" VerticalAlignment="Center" Text="..."/>
										<TextBlock DockPanel.Dock="Top"  VerticalAlignment="Center" Text="Send Motion Portを39009に設定してください。"/>
										<TextBlock DockPanel.Dock="Top"  VerticalAlignment="Center" Text="正常に設定されると、以下の表示が変化します"/>
										<TextBlock DockPanel.Dock="Bottom" Name="WelcomeWaidayoIsReceived" TextAlignment="Center" VerticalAlignment="Center" Background="LightGreen" Text="正常に信号を受け取れています"/>
										<TextBlock DockPanel.Dock="Bottom" Name="WelcomeWaidayoIsNotReceived" TextAlignment="Center" VerticalAlignment="Center" Background="LightPink" Text="信号が来ていません"/>
										<TextBlock DockPanel.Dock="Bottom" Name="WelcomeWaidayoIsNotRunning" TextAlignment="Center" VerticalAlignment="Center" Background="Yellow" Text="Oredayoが正常に起動していません"/>
									</DockPanel>
								</Grid>
							</TabItem>
						</TabControl>
					</GroupBox>
					<GroupBox Header="3. VRMを読み込みましょう">
						<DockPanel>
							<TextBlock DockPanel.Dock="Top" Text="waidayoに読み込んだdefault.vrmを読み込んでください"/>
							<Button DockPanel.Dock="Top" Margin="1,1,1,1" Content="VRMを読み込む" Click="VRMLoadFileSelectButton_Click" />
							<TextBlock   Name="WelcomeVRMisLoadedTextBlock" TextAlignment="Center" DockPanel.Dock="Bottom" VerticalAlignment="Center" Background="LightGreen" Text="VRMが読み込まれました"/>
							<TextBlock   Name="WelcomeVRMisNotLoadedTextBlock" TextAlignment="Center" DockPanel.Dock="Bottom" VerticalAlignment="Center" Background="LightPink" Text="VRMを読み込んでください"/>
						</DockPanel>
					</GroupBox>
					<GroupBox Header="4. エフェクトを掛けましょう">
						<DockPanel>
							<Button DockPanel.Dock="Top" Margin="1,1,1,1" Content="グリーンバック" />
							<Button DockPanel.Dock="Top" Margin="1,1,1,1" Content="SF風透過" />
							<Button DockPanel.Dock="Top" Margin="1,1,1,1" Content="エモーショナル透過" />
							<Button DockPanel.Dock="Top" Margin="1,1,1,1" Content="黒背景" />
						</DockPanel>
					</GroupBox>
				</StackPanel>
			</TabItem>
			<TabItem  Header="{DynamicResource Tab_BasicSetting}">
				<StackPanel>
					<GroupBox Header="{DynamicResource Gen_Language}">
						<DockPanel Grid.Column="0" Grid.Row="0" >
							<TextBlock VerticalAlignment="Center" Text="Language: "/>
							<ComboBox Name="LanguageComboBox" SelectionChanged="LanguageComboBox_SelectionChanged">
								<ComboBoxItem Content="日本語 - Japanese" IsSelected="True"/>
								<ComboBoxItem Content="English"/>
							</ComboBox>
						</DockPanel>
					</GroupBox>
					<GroupBox Header="{DynamicResource Tab_Basic_SettingFiles}">
						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition/>
								<ColumnDefinition/>
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition />
								<RowDefinition />
							</Grid.RowDefinitions>
							<Button Name="QuickSaveButton" Grid.Column="0" Grid.Row="0"  Margin="1,1,1,1" Content="{DynamicResource Tab_Basic_QuickConfigSave}" Click="QuickSaveButton_Click"/>

							<Button Name="QuickLoadButton" Grid.Column="1" Grid.Row="0"  Margin="1,1,1,1" Content="{DynamicResource Tab_Basic_QuickConfigLoad}" Click="QuickLoadButton_Click"/>
							<Button Name="SaveButton" Grid.Column="0" Grid.Row="1"  Margin="1,1,1,1" Content="{DynamicResource Tab_Basic_ConfigSave}" Click="SaveButton_Click"/>
							<Button Name="LoadButton" Grid.Column="1" Grid.Row="1"  Margin="1,1,1,1" Content="{DynamicResource Tab_Basic_ConfigLoad}" Click="LoadButton_Click"/>
						</Grid>
					</GroupBox>
					<GroupBox Header="{DynamicResource Tab_Basic_VRMLoading}">
						<Grid>
							<Grid.RowDefinitions>
								<RowDefinition />
								<RowDefinition />
							</Grid.RowDefinitions>
							<DockPanel Grid.Row="0" >
								<TextBlock VerticalAlignment="Center" Grid.Column="0" Grid.Row="0" Text="{DynamicResource Gen_Path}"/>
								<Button DockPanel.Dock="Right"  HorizontalAlignment="Right"  Name="VRMLoadFileSelectButton"  Margin="1,1,1,1" Content="{DynamicResource Gen_Browse}" Click="VRMLoadFileSelectButton_Click"/>
								<Button  DockPanel.Dock="Right" HorizontalAlignment="Right" Name="VRMLoadButton" Margin="1,1,1,1" Content="{DynamicResource Gen_Load}" Click="VRMLoadButton_Click"/>
								<TextBox DockPanel.Dock="Top" Name="VRMPathTextBox" Text="c:\default.vrm" />
							</DockPanel>
							<TextBlock Text="{DynamicResource Tab_Basic_VRMLoadingCaution}" Grid.Row="1" />
						</Grid>
					</GroupBox>
					<GroupBox Header="{DynamicResource Tab_Basic_LoadBackground}">
						<Grid>
							<Grid.RowDefinitions>
								<RowDefinition />
								<RowDefinition />
							</Grid.RowDefinitions>
							<DockPanel Grid.Row="0" >
								<TextBlock VerticalAlignment="Center" Grid.Column="0" Grid.Row="0" Text="{DynamicResource Gen_Path}"/>
								<Button DockPanel.Dock="Right" HorizontalAlignment="Right"  Margin="1,1,1,1" Content="{DynamicResource Gen_Remove}" Click="BackgroundObjectRemoveButton_Click"/>
								<Button DockPanel.Dock="Right" HorizontalAlignment="Right"  Margin="1,1,1,1" Content="{DynamicResource Gen_Browse}" Click="BackgroundObjectLoadFileSelectButton_Click"/>
								<Button DockPanel.Dock="Right" HorizontalAlignment="Right"  Margin="1,1,1,1" Content="{DynamicResource Gen_Load}" Click="BackgroundObjectLoadButton_Click"/>
								<TextBox VerticalAlignment="Center" Name="BackgroundObjectPathTextBox" Text="c:\background.png" Grid.Row="0" />
							</DockPanel>
							<TextBlock Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="5" Text="{DynamicResource Tab_Basic_LoadBackgroundTypes}"/>
						</Grid>
					</GroupBox>
					<GroupBox Header="{DynamicResource Tab_Basic_CameraPosition}">
						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition />
								<ColumnDefinition/>
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition />
								<RowDefinition />
								<RowDefinition />
							</Grid.RowDefinitions>
							<DockPanel Grid.Column="0" Grid.Row="0" >
								<TextBlock Text="{DynamicResource Gen_X_Rot}"/>
								<Button DockPanel.Dock="Right" HorizontalAlignment="Right" Name="CameraRotateXResetButton" Margin="1,1,1,1"   Content="{DynamicResource Gen_Reset}" Click="CameraRotateXResetButton_Click" />
								<Slider Name="CameraRotateXSlider" Value="0" Maximum="180" Minimum="-180" ValueChanged="CameraSlider_ValueChanged" />
							</DockPanel>
							<DockPanel Grid.Column="0" Grid.Row="1" >
								<TextBlock Text="{DynamicResource Gen_Y_Rot}"/>
								<Button DockPanel.Dock="Right" HorizontalAlignment="Right" Name="CameraRotateYResetButton" Margin="1,1,1,1"   Content="{DynamicResource Gen_Reset}" Click="CameraRotateYResetButton_Click" />
								<Slider Name="CameraRotateYSlider" Value="0" Maximum="180" Minimum="-180" ValueChanged="CameraSlider_ValueChanged" />
							</DockPanel>
							<DockPanel Grid.Column="0" Grid.Row="2"  >
								<TextBlock Text="{DynamicResource Gen_Z_Rot}"/>
								<Button DockPanel.Dock="Right" HorizontalAlignment="Right" Name="CameraRotateZResetButton" Margin="1,1,1,1"   Content="{DynamicResource Gen_Reset}" Click="CameraRotateZResetButton_Click" />
								<Slider Name="CameraRotateZSlider" Value="0" Maximum="180" Minimum="-180" ValueChanged="CameraSlider_ValueChanged" />
							</DockPanel>
							<DockPanel Grid.Column="1" Grid.Row="0"  >
								<TextBlock  Text="{DynamicResource Gen_Zoom}"/>
								<Button DockPanel.Dock="Right" HorizontalAlignment="Right" Name="CameraValue1ResetButton" Margin="1,1,1,1"   Content="{DynamicResource Gen_Reset}" Click="CameraValue1ResetButton_Click"/>
								<Slider Name="CameraValue1Slider"  Value="1.7" Maximum="35" Minimum="0.3"  ValueChanged="CameraSlider_ValueChanged" />
							</DockPanel>
							<DockPanel Grid.Column="1" Grid.Row="1"  >
								<TextBlock  Text="{DynamicResource Gen_Height}"/>
								<Button DockPanel.Dock="Right" HorizontalAlignment="Right" Name="CameraValue2ResetButton" Margin="1,1,1,1"   Content="{DynamicResource Gen_Reset}" Click="CameraValue2ResetButton_Click"/>
								<Slider Name="CameraValue2Slider"  Value="1.4" Maximum="3" Minimum="-1"  ValueChanged="CameraSlider_ValueChanged" />
							</DockPanel>
							<DockPanel Grid.Column="1" Grid.Row="2"  >
								<TextBlock Text="{DynamicResource Gen_FOV}"/>
								<Button DockPanel.Dock="Right" HorizontalAlignment="Right" Name="CameraValue3ResetButton" Margin="1,1,1,1"  Content="{DynamicResource Gen_Reset}" Click="CameraValue3ResetButton_Click"/>
								<Slider Name="CameraValue3Slider"  Value="20" Maximum="90" Minimum="1"  ValueChanged="CameraSlider_ValueChanged" />
							</DockPanel>
						</Grid>
					</GroupBox>
					<GroupBox Header="{DynamicResource Tab_Basic_LightPosition}">
						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition />
								<ColumnDefinition />
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition />
								<RowDefinition />
								<RowDefinition />
								<RowDefinition />
							</Grid.RowDefinitions>
							<DockPanel Grid.Column="0" Grid.Row="0"  >
								<TextBlock Text="{DynamicResource Gen_X_Rot}"/>
								<Button DockPanel.Dock="Right" HorizontalAlignment="Right" Name="LightRotateXResetButton" Margin="1,1,1,1"  Content="{DynamicResource Gen_Reset}" Click="LightRotateXResetButton_Click" />
								<Slider Name="LightRotateXSlider"  Value="140" Maximum="180" Minimum="-180" ValueChanged="LightSlider_ValueChanged" />
							</DockPanel>
							<DockPanel Grid.Column="0" Grid.Row="1"  >
								<TextBlock Text="{DynamicResource Gen_Y_Rot}"/>
								<Button DockPanel.Dock="Right" HorizontalAlignment="Right" Name="LightRotateYResetButton" Margin="1,1,1,1"  Content="{DynamicResource Gen_Reset}" Click="LightRotateYResetButton_Click" />
								<Slider Name="LightRotateYSlider"  Value="0" Maximum="180" Minimum="-180" ValueChanged="LightSlider_ValueChanged" />
							</DockPanel>
							<DockPanel Grid.Column="0" Grid.Row="2"  >
								<TextBlock Text="{DynamicResource Gen_Z_Rot}"/>
								<Button DockPanel.Dock="Right" HorizontalAlignment="Right" Visibility="Hidden" Name="LightRotateZResetButton" Margin="1,1,1,1"  Content="{DynamicResource Gen_Reset}" Click="LightRotateZResetButton_Click" />
								<Slider Visibility="Hidden" Name="LightRotateZSlider" Grid.Column="1" Grid.Row="2" Value="0" Maximum="180" Minimum="-180" ValueChanged="LightSlider_ValueChanged" />
							</DockPanel>
							<DockPanel Grid.Column="1" Grid.Row="0"  >
								<TextBlock Text="{DynamicResource Gen_Distance}"/>
								<Button DockPanel.Dock="Right" HorizontalAlignment="Right" Name="LightValue1ResetButton" Margin="1,1,1,1"  Content="{DynamicResource Gen_Reset}" Click="LightValue1ResetButton_Click"/>
								<Slider Name="LightValue1Slider"  Value="5" Maximum="10" Minimum="1"  ValueChanged="LightSlider_ValueChanged" />
							</DockPanel>
							<DockPanel Grid.Column="1" Grid.Row="1"  >
								<TextBlock  Text="{DynamicResource Gen_Intensity}"/>
								<Button DockPanel.Dock="Right" HorizontalAlignment="Right" Name="LightValue2ResetButton" Margin="1,1,1,1"  Content="{DynamicResource Gen_Reset}" Click="LightValue2ResetButton_Click"/>
								<Slider Name="LightValue2Slider"  Value="50" Maximum="100" Minimum="0"  ValueChanged="LightSlider_ValueChanged" />
							</DockPanel>
							<DockPanel Grid.Column="1" Grid.Row="2"  >
								<TextBlock  Text="{DynamicResource Gen_Diffusion}"/>
								<Button DockPanel.Dock="Right" HorizontalAlignment="Right" Name="LightValue3ResetButton" Margin="1,1,1,1"  Content="{DynamicResource Gen_Reset}" Click="LightValue3ResetButton_Click"/>
								<Slider Name="LightValue3Slider"  Value="30" Maximum="179" Minimum="1"  ValueChanged="LightSlider_ValueChanged" />
							</DockPanel>
							<GroupBox Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="6" Header="{DynamicResource Gen_Type}" >
								<Grid>
									<Grid.ColumnDefinitions>
										<ColumnDefinition />
										<ColumnDefinition />
										<ColumnDefinition />
									</Grid.ColumnDefinitions>
									<Grid.RowDefinitions>
										<RowDefinition />
									</Grid.RowDefinitions>
									<RadioButton Name="LightTypeDirectionalRadioButton" Grid.Column="0" Content="{DynamicResource Gen_Directional}" IsChecked="True" Checked="LightTypeChanged" />
									<RadioButton Name="LightTypePointRadioButton" Grid.Column="1" Content="{DynamicResource Gen_Point}" Checked="LightTypeChanged"/>
									<RadioButton Name="LightTypeSpotRadioButton" Grid.Column="2" Content="{DynamicResource Gen_Spot}" Checked="LightTypeChanged"/>
								</Grid>
							</GroupBox>
						</Grid>
					</GroupBox>
					<GroupBox Header="{DynamicResource Tab_Basic_BackgroundObjectPosition}">
						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition />
								<ColumnDefinition />
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition />
								<RowDefinition />
								<RowDefinition />
								<RowDefinition />
							</Grid.RowDefinitions>
							<DockPanel Grid.Column="0" Grid.Row="0"  >
								<TextBlock Text="{DynamicResource Gen_X_Rot}"/>
								<Button DockPanel.Dock="Right" HorizontalAlignment="Right" Name="BackgroundRotateXResetButton" Margin="1,1,1,1"  Content="{DynamicResource Gen_Reset}" Click="BackgroundRotateXResetButton_Click" />
								<Slider Name="BackgroundRotateXSlider"  Value="0" Maximum="180" Minimum="-180" ValueChanged="BackgroundSlider_ValueChanged" />
							</DockPanel>
							<DockPanel Grid.Column="0" Grid.Row="1"  >
								<TextBlock Text="{DynamicResource Gen_Y_Rot}"/>
								<Button DockPanel.Dock="Right" HorizontalAlignment="Right" Name="BackgroundRotateYResetButton" Margin="1,1,1,1"    Content="{DynamicResource Gen_Reset}" Click="BackgroundRotateYResetButton_Click" />
								<Slider Name="BackgroundRotateYSlider"  Value="-180" Maximum="180" Minimum="-180" ValueChanged="BackgroundSlider_ValueChanged" />
							</DockPanel>
							<DockPanel Grid.Column="0" Grid.Row="2"  >
								<TextBlock Text="{DynamicResource Gen_Z_Rot}"/>
								<Button DockPanel.Dock="Right" HorizontalAlignment="Right" Name="BackgroundRotateZResetButton" Margin="1,1,1,1"   Content="{DynamicResource Gen_Reset}" Click="BackgroundRotateZResetButton_Click" />
								<Slider Name="BackgroundRotateZSlider" Value="0" Maximum="180" Minimum="-180" ValueChanged="BackgroundSlider_ValueChanged" />
							</DockPanel>
							<DockPanel Grid.Column="1" Grid.Row="0"  >
								<TextBlock  Text="{DynamicResource Gen_X_Pos}"/>
								<Button DockPanel.Dock="Right" HorizontalAlignment="Right" Name="BackgroundValue1ResetButton" Margin="1,1,1,1"   Content="{DynamicResource Gen_Reset}" Click="BackgroundValue1ResetButton_Click"/>
								<Slider Name="BackgroundValue1Slider"  Value="0" Maximum="10" Minimum="-10"  ValueChanged="BackgroundSlider_ValueChanged" />
							</DockPanel>
							<DockPanel Grid.Column="1" Grid.Row="1"  >
								<TextBlock  Text="{DynamicResource Gen_Y_Pos}"/>
								<Button DockPanel.Dock="Right" HorizontalAlignment="Right" Name="BackgroundValue2ResetButton" Margin="1,1,1,1"    Content="{DynamicResource Gen_Reset}" Click="BackgroundValue2ResetButton_Click"/>
								<Slider Name="BackgroundValue2Slider"   Value="1.4" Maximum="10" Minimum="-10"  ValueChanged="BackgroundSlider_ValueChanged" />
							</DockPanel>
							<DockPanel Grid.Column="1" Grid.Row="2"  >
								<TextBlock Text="{DynamicResource Gen_Z_Pos}"/>
								<Button DockPanel.Dock="Right" HorizontalAlignment="Right" Name="BackgroundValue3ResetButton" Margin="1,1,1,1"    Content="{DynamicResource Gen_Reset}" Click="BackgroundValue3ResetButton_Click"/>
								<Slider Name="BackgroundValue3Slider"  Value="-1" Maximum="30" Minimum="-30"  ValueChanged="BackgroundSlider_ValueChanged" />
							</DockPanel>
							<DockPanel Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" >
								<TextBlock Text="{DynamicResource Gen_Scale}"/>
								<Button DockPanel.Dock="Right" HorizontalAlignment="Right" Name="BackgroundScaleResetButton" Margin="1,1,1,1"   Content="{DynamicResource Gen_Reset}" Click="BackgroundScaleResetButton_Click"/>
								<Slider Name="BackgroundScaleSlider"   Value="1" Maximum="10" Minimum="0"  ValueChanged="BackgroundSlider_ValueChanged" />
							</DockPanel>
						</Grid>
					</GroupBox>

					<GroupBox Header="{DynamicResource Gen_Information}">
						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition/>
								<ColumnDefinition/>
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition />
								<RowDefinition />
							</Grid.RowDefinitions>
							<DockPanel Grid.Column="0" Grid.Row="0">
								<TextBlock Margin="0,0,30,0" DockPanel.Dock="Right"  HorizontalAlignment="Right" Text="39009"/>
								<TextBlock Text="{DynamicResource Gen_EVMC4UPort}"/>
							</DockPanel>
							<DockPanel Grid.Column="0" Grid.Row="1">
								<TextBlock Margin="0,0,30,0" DockPanel.Dock="Right" HorizontalAlignment="Right" Text="39008"/>
								<TextBlock Text="{DynamicResource Gen_SEDSSPort}"/>
							</DockPanel>
							<DockPanel Grid.Column="1" Grid.Row="0">
								<TextBlock DockPanel.Dock="Right" Width="50" HorizontalAlignment="Right" Name="InfoEVMC4UStateTextBlock"  Background="Gray">--</TextBlock>
								<TextBlock Text="{DynamicResource Gen_EVMC4UReceiveStatus}"/>
							</DockPanel>
							<DockPanel Grid.Column="1" Grid.Row="1">
								<TextBlock DockPanel.Dock="Right" Width="50" HorizontalAlignment="Right" Name="InfoUIStateTextBlock" Background="Gray">--</TextBlock>
								<TextBlock Text="{DynamicResource Gen_UICommunicationStatus}"/>
							</DockPanel>
						</Grid>
					</GroupBox>
				</StackPanel>
			</TabItem>
			<TabItem  Header="{DynamicResource Tab_AdvancedSetting}">
				<StackPanel>
					<GroupBox Header="{DynamicResource Tab_AdvancedSetting_EVMC4U}">
						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition/>
								<ColumnDefinition/>
								<ColumnDefinition/>
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition />
								<RowDefinition />
								<RowDefinition />
