<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_UI"
        xmlns:Controls="clr-namespace:akr.WPF.Controls;assembly=akr.WPF.Controls.ColorPicker" x:Class="WPF_UI.MainWindow"
        mc:Ignorable="d"
        Title="Oredayo UI" Height="450" Width="800" Closed="Window_Closed" Loaded="Window_Loaded">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<DockPanel>
			<StackPanel  DockPanel.Dock="Left" Width="400">
				<GroupBox Header="情報">
					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="110"/>
							<ColumnDefinition Width="110"/>
						</Grid.ColumnDefinitions>
						<Grid.RowDefinitions>
							<RowDefinition />
							<RowDefinition />
						</Grid.RowDefinitions>
						<TextBlock Grid.Column="0" Grid.Row="0">EVMC4U ポート番号</TextBlock>
						<TextBlock Grid.Column="1" Grid.Row="0">39009</TextBlock>
						<TextBlock Grid.Column="0" Grid.Row="1">SEDSS ポート番号</TextBlock>
						<TextBlock Grid.Column="1" Grid.Row="1">39008</TextBlock>
					</Grid>
				</GroupBox>
				<GroupBox Header="VRM読み込み">
					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="30"/>
							<ColumnDefinition/>
							<ColumnDefinition Width="60"/>
							<ColumnDefinition Width="60"/>
						</Grid.ColumnDefinitions>
						<Grid.RowDefinitions>
							<RowDefinition />
							<RowDefinition />
						</Grid.RowDefinitions>
						<TextBlock Grid.Column="0" Grid.Row="0">パス:</TextBlock>
						<TextBox Name="VRMPathTextBox" Text="c:\default.vrm" Grid.Column="1" Grid.Row="0" />
						<Button Name="VRMLoadButton" Grid.Column="2" Grid.Row="0"  Margin="1,1,1,1" Content="読み込み" Click="VRMLoadButton_Click"></Button>
						<Button IsEnabled="False" Name="VRMLoadFileSelectButton" Grid.Column="3" Grid.Row="0"  Margin="1,1,1,1" Content="参照" Click="VRMLoadButton_Click"></Button>
					</Grid>
				</GroupBox>
				<GroupBox Header="カメラ位置">
					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="30" />
							<ColumnDefinition />
							<ColumnDefinition Width="60"/>
						</Grid.ColumnDefinitions>
						<Grid.RowDefinitions>
							<RowDefinition />
							<RowDefinition />
							<RowDefinition />
						</Grid.RowDefinitions>
						<TextBlock Grid.Column="0" Grid.Row="0">回転</TextBlock>
						<Slider Name="CameraRotateSlider" Grid.Column="1" Grid.Row="0" Value="180" Maximum="360" Minimum="0" ValueChanged="CameraSlider_ValueChanged" />
						<Button Name="CameraRotateResetButton" Margin="1,1,1,1"  Grid.Column="2" Grid.Row="0"  Content="リセット" Click="CameraRotateResetButton_Click" />
						<TextBlock Grid.Column="0" Grid.Row="1">ズーム</TextBlock>
						<Slider Name="CameraZoomSlider" Grid.Column="1" Grid.Row="1"  Value="30" Maximum="100" Minimum="0"  ValueChanged="CameraSlider_ValueChanged" />
						<Button Name="CameraZoomResetButton" Margin="1,1,1,1"  Grid.Column="2" Grid.Row="1"  Content="リセット" Click="CameraZoomResetButton_Click"/>
						<TextBlock Grid.Column="0" Grid.Row="2">高さ</TextBlock>
						<Slider Name="CameraHeightSlider" Grid.Column="1" Grid.Row="2"  Value="1.4" Maximum="3" Minimum="-1"  ValueChanged="CameraSlider_ValueChanged" />
						<Button Name="CameraHeightResetButton" Margin="1,1,1,1"  Grid.Column="2" Grid.Row="2"  Content="リセット" Click="CameraHeightResetButton_Click"/>
					</Grid>
				</GroupBox>
				<GroupBox Header="ライト位置">
					<Button Content="リセット"></Button>
				</GroupBox>
				<GroupBox Header="EVMC4U">
					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition/>
							<ColumnDefinition Width="60"/>
							<ColumnDefinition Width="100"/>
						</Grid.ColumnDefinitions>
						<Grid.RowDefinitions>
							<RowDefinition Height="20" />
							<RowDefinition Height="20" />
							<RowDefinition Height="20" />
						</Grid.RowDefinitions>
						<CheckBox VerticalAlignment="Center" IsEnabled="false" Grid.Column="0" Grid.Row="0"  Content="Freeze"/>
						<Button IsEnabled="false" Name="PhotoButton"  Grid.Column="2" Grid.Row="0"  Content="高解像度撮影"></Button>
						<CheckBox VerticalAlignment="Center" IsEnabled="false" Grid.Column="0" Grid.Row="1"  Content="Bone Filter Enable"/>
						<TextBlock  VerticalAlignment="Center" HorizontalAlignment="Right" IsEnabled="false" Grid.Column="1" Grid.Row="1" Margin="0,0,2,0">フィルタ値:</TextBlock>
						<TextBox Text="0.9" VerticalAlignment="Center" IsEnabled="false" Grid.Column="2" Grid.Row="1" />
						<CheckBox VerticalAlignment="Center" IsEnabled="false" Grid.Column="0" Grid.Row="2"   Content="Blend Shape Filter Enable"/>
						<TextBlock  VerticalAlignment="Center" HorizontalAlignment="Right" IsEnabled="false" Grid.Column="1" Grid.Row="2" Margin="0,0,2,0" >フィルタ値:</TextBlock>
						<TextBox  Text="0.9" VerticalAlignment="Center" IsEnabled="false" Grid.Column="2" Grid.Row="2" />
					</Grid>
				</GroupBox>
				<GroupBox Header="Window">
					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="0.3*"/>
							<ColumnDefinition Width="0.3*"/>
							<ColumnDefinition Width="0.3*"/>
						</Grid.ColumnDefinitions>
						<Grid.RowDefinitions>
							<RowDefinition Height="20" />
						</Grid.RowDefinitions>
						<CheckBox VerticalAlignment="Center" IsEnabled="false" Grid.Column="0" Grid.Row="0"  Content="最前面"/>
						<CheckBox VerticalAlignment="Center" IsEnabled="false" Grid.Column="1" Grid.Row="0"  Content="透過"/>
						<CheckBox VerticalAlignment="Center" IsEnabled="false" Grid.Column="2" Grid.Row="0"   Content="マウスフォーカス"/>
					</Grid>
				</GroupBox>
				<GroupBox Header="SEDSS">
					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition/>
							<ColumnDefinition Width="100"/>
							<ColumnDefinition Width="100"/>
						</Grid.ColumnDefinitions>
						<Grid.RowDefinitions>
							<RowDefinition Height="20" />
						</Grid.RowDefinitions>
						<CheckBox VerticalAlignment="Center" IsEnabled="false" Grid.Column="0" Grid.Row="0"  Content="送受信を許可する"/>
						<TextBlock  VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="1" Grid.Row="0" Margin="0,0,2,0" >暗号化パスワード:</TextBlock>
						<TextBox  Text="" VerticalAlignment="Center" IsEnabled="false" Grid.Column="2" Grid.Row="0" />
					</Grid>
				</GroupBox>
			</StackPanel>
			<GroupBox Header="背景色" DockPanel.Dock="Right" HorizontalAlignment="Right" VerticalAlignment="Top">
				<Controls:ColorPicker SelectedColorChanged="ColorPicker_SelectedColorChanged" SelectedColor="Green" />
			</GroupBox>
		</DockPanel>
	</Grid>
</Window>
